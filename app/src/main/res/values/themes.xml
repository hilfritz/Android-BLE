<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme -->
    <style name="Theme.BLEScanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
    </style>

    <!-- Rounded-corner Material AlertDialog theme -->
    <style name="MyRoundedAlertDialogTheme"
        parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Base shape for dialog -->
        <item name="shapeAppearance">
            @style/ShapeAppearance.MaterialComponents.MediumComponent
        </item>
        <!-- Our custom overlay to make it extra rounded -->
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.RoundedMedium
        </item>
    </style>

    <!-- ðŸ”¹ NEW: base overlay style to satisfy any @style/ShapeAppearanceOverlay.MyApp reference -->
    <style name="ShapeAppearanceOverlay.MyApp"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <!-- you can keep this empty or adjust defaults -->
    </style>

    <!-- The custom rounded shape -->
    <style name="ShapeAppearanceOverlay.MyApp.RoundedMedium"
        parent="ShapeAppearanceOverlay.MyApp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

</resources>
